---
interface Props {
	lang: string;
}

const { lang } = Astro.props;
import { getData } from '@cv';
import  Section from  '@/components/Section.astro'
import  WorldMap from  '@/icons/WorldMap.astro'

const { basics } = getData(lang);

const { name, label, image, location }  = basics
const { city, region } = location

---

<Section >
	<div class="container">
		<div class="info">
			<h1>{name}</h1>
			<h3>{label}</h3>
			<span>
				<WorldMap/>
				{city}, {region}
			</span>
		</div>
		<figure >
			<img src={image} alt={name} />
		</figure>
	</div>
</Section>

<style>
	.container{
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.info{
		display: flex;
		flex-direction: column;
		gap: .5rem;
		padding-right: 3px;

	}

	h1{
		font-size: 2rem;
	}

	img{
		aspect-ratio: 1/1;
		object-fit: cover;
		width: 100px;
		border-radius: 16px;

	}
	span{
		color: #666;
		display: flex;
		align-items: center;
		gap: .25rem;
		font-size: .85rem;
		letter-spacing: -0.05rem;
	}
</style>